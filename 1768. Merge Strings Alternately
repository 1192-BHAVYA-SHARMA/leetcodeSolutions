class Solution {
    public String mergeAlternately(String word1, String word2) {
        
        int n1=word1.length();
        int  n2=word2.length();
        int m = Math.max(n1,n2);
        String s="";
        for(int i=0;i<m;i++){
            if(i<n1){s+=word1.charAt(i);}
            if(i<n2){s+=word2.charAt(i);} 
        }
        return s;
    }
}
